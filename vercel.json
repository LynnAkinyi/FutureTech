{
    "version": 2,
    "builds": [{
            "src": "TheBlog/wsgi.py",
            "use": "@vercel/python",
            "config": {
                "maxLambdaSize": "15mb",
                "runtime": "python3.9"
            }
        },
        {
            "src": "blog-frontend/package.json",
            "use": "@vercel/static-build",
            "config": {
                "buildCommand": "cd blog-frontend && npm install && npm run build",
                "outputDirectory": "blog-frontend/build"
            }
        }
    ],
    "routes": [{
            "src": "/static/(.*)",
            "dest": "blog-frontend/build/static/$1"
        },
        {
            "src": "/api/(.*)",
            "dest": "TheBlog/wsgi.py"
        },
        {
            "src": "/(.*)",
            "dest": "blog-frontend/build/index.html"
        }
    ]
}